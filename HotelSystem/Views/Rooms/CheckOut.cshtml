@model IEnumerable<Room>
<!DOCTYPE html>
@if (Model.Count() > 0)
{
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
        <style>
            body {
                background-color: #f8f9fa;
                font-family: Arial, sans-serif;
            }

            .container {
                margin-top: 50px;
            }

            h1 {
                text-align: center;
                margin-bottom: 30px;
                font-weight: 700;
                color: #333;
            }

            .table {
                background-color: #fff;
                border-radius: 10px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }

                .table thead th {
                    background-color: #f8f9fa;
                    border: none;
                    color: #333;
                    font-weight: 600;
                    text-transform: uppercase;
                }

                .table tbody tr:hover {
                    background-color: #f8f9fa;
                }

                .table tbody td {
                    color: #555;
                }

            .status-booked {
                color: #dc3545;
                font-weight: 600;
            }

            .btn-outline-dark {
                border-color: #343a40;
                color: #343a40;
            }

                .btn-outline-dark:hover {
                    background-color: #343a40;
                    color: white;
                }
        </style>
        <title>Booked Rooms</title>
    </head>

    <body>
        <div class="container">
            <h1>Booked Rooms</h1>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(e => e.Id)</th>
                        <th>@Html.DisplayNameFor(e => e.Type)</th>
                        <th>@Html.DisplayNameFor(e => e.Floor)</th>
                        <th>@Html.DisplayNameFor(e => e.Price)</th>
                        <th>@Html.DisplayNameFor(e => e.Status)</th>
                        <th>Guest Name</th>
                        <th>@Html.DisplayNameFor(e => e.Guestts[0].CheckInDate)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Type</td>
                            <td>@item.Floor</td>
                            <td>@item.Price</td>
                            <td><span class="status-booked"><i class="fas fa-times-circle"></i> @item.Status</span></td>
                            @foreach (var i in item.Guestts)
                            {
                                if (i.CheckOutDate == null)
                                {
                                    <td>@i.FullName</td>
                                    <td>@i.CheckInDate</td>
                                    <td>
                                        <a asp-controller="Guestt"
                                           asp-action="GetLeaveView"
                                           asp-route-id="@i.Id"
                                           class="btn btn-outline-dark"
                                           title="Check Out">
                                            <i class="fas fa-sign-out-alt"></i> Check Out
                                        </a>
                                    </td>

                                }
                            }
                           
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    </body>
    </html>
}
else
{
    <h1 class="alert alert-danger text-center">No Booked Rooms</h1>
}
