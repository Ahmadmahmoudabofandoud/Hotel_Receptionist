@model IEnumerable<Guestt>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
            font-weight: 700;
            color: #333;
        }

        .table {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .table thead th {
                background-color: #f8f9fa;
                border: none;
                color: #333;
                font-weight: 600;
                text-transform: uppercase;
            }

            .table tbody tr {
                transition: background-color 0.3s ease-in-out;
            }

                .table tbody tr:hover {
                    background-color: rgba(248, 249, 250, 0.7);
                }

            .table tbody td {
                color: #555;
            }

        .btn-create {
            font-size: 18px;
            color: #28a745;
        }

        .btn-details {
            font-size: 18px;
            color: #007bff;
        }
    </style>
    <title>Hotel Guests</title>
</head>

<body>
    <div class="container">
        <h1>Discover Our Hotel Guests</h1>
        <table class="table table-hover">
            <thead>
                <tr>                    
                    <th>@Html.DisplayNameFor(e=>e.FullName)</th>
                    <th>@Html.DisplayNameFor(e=>e.CheckInDate)</th>
                    <th>@Html.DisplayNameFor(e=>e.CheckOutDate)</th>
                    <th>@Html.DisplayNameFor(e=>e.RoomId)</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FullName</td>
                        <td>@item.CheckInDate</td>
                        @if (item.CheckOutDate == null)
                        {
                            <td>Still In Our Hotel</td>
                        }else
                        {    
                        <td>@item.CheckOutDate</td>
                        }
                        <td>@item.RoomId</td>
                        <td>
                            <a asp-controller="Guestt"
                               asp-action="GetDetailsView"
                               asp-route-id="@item.Id"
                               class="btn btn-details"
                               title="Details">
                                <i class="fas fa-info-circle"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
